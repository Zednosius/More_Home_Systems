# Planetary ring, no mesh
entity = {
	name = "planetary_ring_entity"
	cull_radius = 500
		
	# planet plane ring	
	locator = { name = "loc1" position = { 0 0 0 } rotation = { 0 0 0 }}

	attach = { "loc1" = "solar_ring_entity"}
	
	scale = 0.52 # reduced size to bring it closer to planet
}


